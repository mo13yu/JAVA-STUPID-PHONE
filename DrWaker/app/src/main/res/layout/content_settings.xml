<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_settings" tools:context="yunjingl.cmu.edu.drwaker.UI.Settings">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Time"
            android:id="@+id/set_time"
            android:textSize="20dp"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Spinner
                android:layout_width="106dp"
                android:layout_height="26dp"
                android:id="@+id/hour"
                android:entries="@array/hour"
                android:spinnerMode="dropdown" />

            <Spinner
                android:layout_width="106dp"
                android:layout_height="26dp"
                android:id="@+id/minute"
                android:entries="@array/minute"
                android:spinnerMode="dropdown" />

            <Spinner
                android:layout_width="106dp"
                android:layout_height="26dp"
                android:id="@+id/ampm"
                android:entries="@array/ampm"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Tune"
            android:id="@+id/choosetune"
            android:textSize="20dp"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:id="@+id/tune"
                android:entries="@array/tune"
                android:spinnerMode="dropdown" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="Test"
                android:id="@+id/testbutton"
                android:layout_marginTop="7dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="Record"
                android:id="@+id/recordbutton"
                android:layout_marginTop="7dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Wake Up Method"
            android:id="@+id/textView"
            android:textSize="20dp"
            android:textStyle="normal"
            android:layout_marginTop="10dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Math Calculation"
            android:id="@+id/math"
            android:checked="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facial Recognization"
            android:id="@+id/facial"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take a picture"
            android:id="@+id/pic"
            android:checked="false" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repeat"
                android:id="@+id/textView2"
                android:textSize="20dp"
                android:textStyle="normal"
                android:layout_marginTop="10dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Once"
                android:id="@+id/radioButton"
                android:checked="true"
                android:layout_marginTop="7dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weekly"
                android:id="@+id/radioButton2"
                android:checked="false"
                android:layout_marginTop="7dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Everyday"
                android:id="@+id/radioButton3"
                android:checked="false"
                android:layout_marginTop="7dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tag"
                android:id="@+id/textView3"
                android:textSize="20dp"
                android:textStyle="normal"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tag"
                android:layout_weight="0.94"
                android:layout_marginTop="7dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:id="@+id/textView4"
                android:textSize="20dp"
                android:textStyle="normal"
                android:layout_marginTop="10dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switch2"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="10dp"
                android:checked="true" />
        </LinearLayout>

        <Spinner
            android:layout_width="147dp"
            android:layout_height="42dp"
            android:id="@+id/location"
            android:entries="@array/location"
            android:spinnerMode="dropdown" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="New Location"
            android:id="@+id/newlocbutton" />

    </LinearLayout>

</RelativeLayout>
